        .dbl-border {
            padding-left: 30px;
            padding-top: 100px;
            position: absolute;
        }

            .dbl-border li {
                margin: 10px 0;
                position: relative;
                width: 100%;
                background: #d7d7d7;
            }

            .dbl-border a {
                color: #808285;
                text-decoration: none;
                border-left: 6px solid #ABC7EA;
                padding-left: 25px;
                height: 44px;
                line-height: 44px;
                font-size: 20px;
                position: relative;
                transition: 0.3s linear;
            }

                .dbl-border a:before {
                    content: "";
                    width: 6px;
                    height: 70%;
                    background: #EE997C;
                    position: absolute;
                    top: 15%;
                    left: -12px;
                }

            .dbl-border li:before {
                content: "";
                width: 6px;
                height: 40%;
                background: #EFDD89;
                position: absolute;
                top: 30%;
                left: -12px;
            }

            .dbl-border a:hover {
                background: #D4D8D9;
            }
    </style>

    
