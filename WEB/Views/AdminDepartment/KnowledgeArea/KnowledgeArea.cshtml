@using BLL.DTO
@model WEB.Models.AdminDepartment.KnowledgeAreaModel
@{
}


<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>Admin</title>

    <link rel="stylesheet" href="~/css/StyleHome.css">

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/Login.css">


</head>


<body>
    <header>
        <div class="child">
            <div class="wrap">
                <nav>
                    <ul class="primary">
                        <li>
                            <a asp-area="" asp-controller="AdminDepartment" asp-action="VHome">Головна</a>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="AdminDepartment" asp-action="GetKnowledgeArea">Перелік галузей знань</a>
                            <ul class="sub">
                                <li><a asp-area="" asp-controller="AdminDepartment" asp-action="GetAddKnowledgeArea">Добавити галузь</a></li>
                            </ul>
                        </li>

                        <li>
                            <a asp-area="" asp-controller="AdminDepartment" asp-action="GetFormEducation">Перелік форм навчання</a>
                            <ul class="sub">
                                <li><a asp-area="" asp-controller="AdminDepartment" asp-action="GetAddFormEducation">Добавити форму</a></li>
                            </ul>
                        </li>

                        <li>
                            <a asp-area="" asp-controller="AdminDepartment" asp-action="GetFormDelivery">Перелік форм здачі</a>
                            <ul class="sub">
                                <li><a asp-area="" asp-controller="AdminDepartment" asp-action="GetAddFormDelivery">Добавити форму</a></li>
                            </ul>
                        </li>

                        <li>
                            <a asp-area="" asp-controller="AdminDepartment" asp-action="GetEducationalDegree">Перелік освітніх ступенів</a>
                            <ul class="sub">
                                <li><a asp-area="" asp-controller="AdminDepartment" asp-action="GetAddEducationalDegree">Добавити ступінь</a></li>
                            </ul>
                        </li>
                    </ul>
                </nav>
            </div>

            <div class="wrap_">
                <nav>
                    <ul class="primary">
                        <li>
                            <a href=""><pre>   Акаунт ▽    </pre></a>
                            <ul class="sub">
                                <li><a asp-area="" asp-controller="account" asp-action="logout">Вихід</a></li>
                            </ul>
                        </li>


                    </ul>
                </nav>
            </div>
        </div>
    </header>

    <style>
        table {
            width: 30%; /* Ширина таблицы */
            padding-top: 50px;
            padding-left: 10px;
            color: black; /* Цвет текста */
            border-spacing: 1px; /* Расстояние между ячейками */
        }

        td, th {
            background: #FFCC99; /* Цвет фона ячеек */
            padding: 5px; /* Поля вокруг текста */
        }
    </style>

    <table>
        <tr>
            <th colspan="3"> Список галузей</th>
        </tr>
        <tr>
            <th>Id</th>
            <th>Назва</th>
            <th>Шифр</th>
        </tr>

        @foreach (KnowledgeAreaDTO list in Model.newList)
        {
            <tr>
                <td>@list.IdArea </td>
                <td>@list.areaName</td>
                <td>@list.areaCode</td>
            </tr>
        }
    </table>
</body>
